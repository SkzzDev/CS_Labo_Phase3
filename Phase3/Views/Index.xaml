<UserControl x:Class="Phase3.Views.Index"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Phase3.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="Styles/Buttons.xaml" />
    </UserControl.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <TextBlock FontWeight="Bold" FontSize="30px" TextWrapping="Wrap">Bienvenue sur l'administration !</TextBlock>
            <TextBlock FontSize="18px" Margin="0 30 0 0" TextWrapping="Wrap">Une toute nouvelle interface pour la gestion des résultats de nos tireurs belges.</TextBlock>
            <TextBlock x:Name="Stats" FontSize="18px" Margin="0 20 0 0" TextWrapping="Wrap"></TextBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>
